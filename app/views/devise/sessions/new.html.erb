<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "au-input au-input--full" } %>
  </div>
  <div class="form-group">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "au-input au-input--full" } %>
  </div>
  <%= f.input :remember_me, class: "form-check-input", as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"%>
  </div>
<% end %>

<div class="text-center mt-4 font-weight-light">
    <p>
      <%= render "devise/shared/links" %>
    </p>
</div>
