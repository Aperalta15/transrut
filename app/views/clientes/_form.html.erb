
  <div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong><center>Nuevo cliente</center></strong>
        </div>
        <div class="card-body card-block">
          <%= simple_form_for @cliente do |f| %>
            <div class="form-group">
              <%= f.label :Identificacion_Del_Cliente %>
              <%= f.number_field :id_cliente, class: "form-control"%>
            </div>
            <div class="form-group">
              <%= f.label :Primer_y_Segundo_Nombre %>
              <%= f.text_field :nombres, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :Primer_y_Segundo_Apellido %>
              <%= f.text_field :apellidos, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :Correo_Electronico %>
              <%= f.date_select :correo, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :Telefono %>
              <%= f.date_select :telefono, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :Ciudad_Donde_Se_Encuentra %>
              <%= f.text_field :ciudad, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :Estado_Activo_o_Inactivo %>
              <%= f.text_field :estado, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :Codigo_Transporte %>
              <%= f.text_field :codigo_trans, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :Precio %>
              <%= f.number_field :precio, class: "form-control"%>
            </div>
            <div class="form-group">
                <%= f.label :Direccion_Inicial %>
              <%= f.text_field :direccion_inicial, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :Direccion_Final %>
              <%= f.text_field :direccion_final, class: "form-control" %>
            </div>

        <div class="actions">
            <%= f.button :submit, class: "btn btn-primary btn-sm"%>
              <button type="reset" class="btn btn-danger btn-sm">
                  <i class="fa fa-ban"></i> Limpiar
              </button>

            <%end%>
        </div>
  </div>
    </div>
  </div>
