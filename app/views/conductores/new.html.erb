<div class="col-lg-12">
  <div class="card">
      <div class="card-header">
          <strong>Nuevo conductor</strong>
      </div>
      <div class="card-body card-block">
        <%= simple_form_for @conductor do |f| %>
          <div class="form-group">
            <%= f.input :num_documento, class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.input :nombre, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.input :fech_ven_licen, order: [:day, :month, :year] %>
          </div>
          <div class="form-group">
            <%= f.input :fech_seg_ini, order: [:day, :month, :year] %>
          </div>
          <div class="form-group">
            <%= f.input :fech_seg_ven, order: [:day, :month, :year] %>
          </div>
          <div class="form-group">
            <%= f.input :fech_ingreso, order: [:day, :month, :year] %>
          </div>
          <div class="form-group">
            <%= f.input :cedula_img, class: "form-control-file" %>
          </div>
          <div class="form-group">
            <%= f.input :hoja_vida, class: "form-control-file" %>
          </div>
          <div class="form-group">
            <%= f.input :licencia, class: "form-control-file" %>
          </div>
      </div>
      <div class="card-footer">
          <%= f.button :submit, class: "btn btn-primary btn-sm"%>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Cancelar
            </button>
          <%end%>
      </div>
  </div>
</div>
